@page
@model Oauthdemo.Pages.CreatEentityModel
@{
    ViewData["Title"] = "Create OAuthDemo Record";
}

<div class="jumbotron">
    <h4>
        Total Records : @ViewData["TotalRecords"]
    </h4>
    <hr class="my-4">
    <form method="post">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Name">Name</label>
                <input type="text" class="form-control" asp-for="Name" placeholder="Full Name">
            </div>
            <div class="form-group col-md-2">
                <label asp-for="Type">Type</label>
                <select asp-for="Type" class="form-control">
                    <option selected>Choose...</option>
                    <option value="1">API</option>
                    <option value="2">OAuth</option>
                </select>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Create Record</button>
    </form>
</div>
